{
    "$schema": "https://1c-syntax.github.io/bsl-language-server/configuration/schema.json",
    "language": "ru",
    "diagnostics": {
      "computeTrigger": "onType",
      "parameters": {
        "LineLength": {
          "maxLineLength": 140
        },
        "SpaceAtStartComment": {
          "commentsAnnotation": "//@,//(c),//Â©,//<<,//>>"
        },
        "MissingSpace": {
          "allowMultipleCommas": true
        },
        "Typo": {
          "minWordLength": 4,
          "userWordsToIgnore": "SVOD"
        },
        "allowParensInComparisons": true
      }
    }
  }